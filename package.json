{
  "name": "llamaforge",
  "version": "0.1.0",
  "private": true,
  "description": "PR Test Generator - Automated test generation for GitHub PRs using LlamaStack",
  "scripts": {
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yaml,yml}\"",
    "typecheck": "pnpm -r typecheck",
    "docker:build": "pnpm -r docker:build",
    "k8s:apply": "kubectl apply -k deploy/kustomize/overlays/dev"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4",
    "vitest": "^4.0.8"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  }
}

